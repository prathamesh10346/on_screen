<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/textView2"
        style="@android:style/Widget.Material.TextView.SpinnerItem"
        android:layout_width="273dp"
        android:layout_height="208dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="ON"
        android:textAlignment="center"
        android:textColor="#F33D3D"
        android:textDirection="firstStrongRtl"
        android:textSize="96sp"
        android:textStyle="bold|italic"
        android:transformPivotX="40px"
        android:transformPivotY="40px"
        android:translationX="40px"
        app:layout_constraintBottom_toTopOf="@+id/surfaceView"
        app:layout_constraintEnd_toStartOf="@+id/surfaceView"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toEndOf="@+id/surfaceView"
        app:layout_constraintTop_toBottomOf="@+id/surfaceView" />
</androidx.constraintlayout.widget.ConstraintLayout>